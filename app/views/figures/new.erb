<h1>Create a New Figure</h1>
<form method="POST" action="/figures">
    <label for="figure_name">Figure Name: </label>
        <input type="text" name="figure[name]" id="figure_name"> <br>
<h2>Existing Titles</h2>
    <%@titles.each do |title|%>
        <label for="<%=title.name%>"><%=title.name%></label>
            <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><br>
    <%end%>
<h2>Existing Landmarks</h2>
    <%@landmarks.each do |landmark|%>
        <label for="<%=landmark.name%>"><%=landmark.name%></label>
            <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><br>
    <%end%>
<h3>Create a New Landmark</h3>
    <label for="landmark_name">Landmark Name:</label>
        <input type="text" name="landmark[name]" id="new_landmark"> <br>
    <label for="landmark_year_completed">Year Completed:</label>
        <input type="text" name="landmark[year_completed]"> <br>
<h3>Create a New Title</h3>
    <label for="title_name">Title Name:</label>
        <input type="text" name="title[name]" id="new_title"> <br>
    <input type="submit" value="Create New Figure">
</form>