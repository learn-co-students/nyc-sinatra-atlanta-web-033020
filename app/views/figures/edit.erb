<form action="/figures/<%=@figure.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    
    <label>Name: </label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br><br>
    
    <h3>Titles</h3>
    <% @titles.each do |title| %>
        <%= title.name %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= @figure.titles.include? title ? "checked" : "" %>/>
        <br>
    <% end %>

    <h3>Create New Title:</h3>
    <input type="text" name="title[name]" id="new_title">

    <h3>Landmarks</h3>
    <% @landmarks.each do |landmark| %>
        <%= landmark.name %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= @figure.landmarks.include? landmark ? "checked" : "" %> />
        <br>
    <% end %>

    <h3>Create New Landmark:</h3>
    <label>Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label>Year: </label>
    <input type="text" name="landmark[year_completed]">
    <input type="submit" value="Edit Figure">
</form>